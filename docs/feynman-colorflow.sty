\newcommand{\Particle}[3]
{
  \ifthenelse{\equal{#1}{f}}{
    \Fermion{(#2)}{<}{#3}{1}{0}{midway=0.4}{1.15}{}}{
  }
  \ifthenelse{\equal{#1}{F}}{
    \Fermion{(#2)}{>}{#3}{1}{0}{midway=0.4}{1.15}{}}{
  }
  \ifthenelse{\equal{#1}{b}}{
    \Boson{(#2)}{1}{#3}{1}{0}{midway=0.4}{1.15}{}}{
  }
  \ifthenelse{\equal{#1}{B}}{
    \Boson{(#2)}{-1}{#3}{1}{0}{midway=0.4}{1.15}{}}{
  }
  \ifthenelse{\equal{#1}{g}}{
    \Gluon{(#2)}{1}{#3}{1}{0}{midway=0.4}{1.15}{}}{
  }
  \ifthenelse{\equal{#1}{G}}{
    \Gluon{(#2)}{-1}{#3}{1}{0}{midway=0.4}{1.15}{}}{
  }
  \ifthenelse{\equal{#1}{H}}{
    \Higgs{(#2)}{-1}{#3}{1}{0}{midway=0.4}{1.15}{}}{
  }
}





